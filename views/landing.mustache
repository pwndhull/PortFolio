<!doctype html>
<html lang="en">
<head>
    <title>My Portfolio</title>
    <meta name="description" content="" />

    {{>head}}
</head>

<body>
    <div class="blocks-page">
<!--navigation-->
<section class="smart-scroll">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-md navbar-light">
            <a class="navbar-brand heading-black" href="/">
                <img class="img-logo" src="{{{img_logo_nav}}}=s520"/>
            </a>
            <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse"
                    data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ml-auto mobile-nav">
                    {{#header_nav.nav1.show_or_hide}}
                    <li class="nav-item">
                        <a class="nav-link scroll-btn" href="#hero_section">{{header_nav.nav1.text}}</a>
                    </li>
                    {{/header_nav.nav1.show_or_hide}}

                    {{#header_nav.nav2.show_or_hide}}
                    <li class="nav-item">
                        <a class="nav-link scroll-btn" href="#section1">{{header_nav.nav2.text}}</a>
                    </li>
                    {{/header_nav.nav2.show_or_hide}}

                    {{#header_nav.nav3.show_or_hide}}
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">{{header_nav.nav3.text}}</a>
                    </li>
                    {{/header_nav.nav3.show_or_hide}}

                    {{#header_nav.nav4.show_or_hide}}
                    <li class="nav-item">
                        <a class="nav-link scroll-btn" href="#section3">{{header_nav.nav4.text}}</a>
                    </li>
                    {{/header_nav.nav4.show_or_hide}}
                </ul>
            </div>
        </nav>
    </div>
</section>

        
        <section style="background:url('../images/bg-desktop.jpg=s2048');background-size:cover;background-position:center;">
            <div class="gradient-div py-3" style="height:76vh">
        
                <div class="container">
                    <div class="row justify-content-center header-row">
                        <div class="col-12 col-md-8 col-lg-7 text-center text-white">
                            <h1 class="display-3 mt-4">{{hero.greeting}}</h1>
                            <p class="lead text-white mb-4 mt-1">
                                {{hero.introduction}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {{>footer}}
    </div>

    {{>scripts}}
</body>
</html>
